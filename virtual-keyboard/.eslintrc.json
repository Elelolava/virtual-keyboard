{
  "extends": "airbnb-base",
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      { 
        "js": "always" 
      }
    ],
    "no-restricted-syntax": [
      "error",
      "LabeledStatement",
      "WithStatement"
    ]
  }
}
